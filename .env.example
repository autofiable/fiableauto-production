# ===== FIABLEAUTO PRODUCTION - VARIABLES D'ENVIRONNEMENT =====

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://fiableauto.fr

# Base de données PostgreSQL (Railway génère automatiquement)
DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT Security
JWT_SECRET=fiableauto_super_secret_key_2025_production_secure_changez_moi
JWT_EXPIRES_IN=7d

# Cloudflare R2 Storage (pour les photos)
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY
R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_KEY
R2_BUCKET_NAME=fiableauto-storage
R2_PUBLIC_URL=https://fiableauto-storage.YOUR_DOMAIN.com

# Brevo Email (notifications automatiques)
BREVO_USER=YOUR_BREVO_LOGIN_EMAIL
BREVO_PASSWORD=YOUR_BREVO_SMTP_KEY
FROM_EMAIL=contact@fiableauto.fr

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Debug
DEBUG=false
